{
  "manifest_version": 3,
  "name": "Indeed Quicksearch",
  "version": "1.0",
  "description": "Search through your applied jobs on Indeed.",
  "host_permissions": [
    "https://in.indeed.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_icon": "default_icon.png",
    "default_title": "Search Applied Jobs on Indeed"
  }
}